# ====================================
# ENTORNO GLOBAL - Variables Compartidas
# ====================================
ENV=general  
PROJECT_NAME=inventario
DOMAIN_NAME=inventario.local

# ====== BACKEND API ======
BACKEND_API_PORT=8000
BACKEND_API_PORT_INTERNAL=8000
BACKEND_API_HOST=0.0.0.0
BACKEND_API_ENV=development
# BACKEND_API_SECRET_KEY= # Variable sensible omitida
BACKEND_API_LOG_LEVEL=debug
BACKEND_API_RELOAD=true
BACKEND_API_PREFIX=/api/services

# ====== NGINX ======
NGINX_PORT=80
NGINX_PORT_INTERNAL=80

# ====== FRONTEND ======
FRONTEND_PORT=3000
FRONTEND_PORT_INTERNAL=3000
FRONTEND_HOST=0.0.0.0
FRONTEND_API_URL=http://backend-api:${BACKEND_API_PORT}

# ====== BACKEND DOCS (Generación de Documentos) ======
DOCS_API_PORT=8010
DOCS_API_PORT_INTERNAL=8010
DOCS_API_HOST=0.0.0.0
DOCS_API_ENV=development
DOCS_API_PREFIX=/api/documents
DOCS_API_URL=http://backend-docs:${DOCS_API_PORT}

# ====== BACKEND TASKS (Ejecución de Tareas) ======
TASKS_API_PORT=8020
TASKS_API_PORT_INTERNAL=8020
TASKS_API_HOST=0.0.0.0
TASKS_API_ENV=development
TASKS_API_PREFIX=/api/tasks

# ====== BACKEND WORKER (Procesador de Colas) ======
WORKER_LOG_LEVEL=info
WORKER_CONCURRENCY=4
WORKER_QUEUES=default,high_priority,low_priority,notifications

# ====== MINIO (Storage) ======
MINIO_ROOT_USER=minioadmin
# MINIO_ROOT_PASSWORD= # Variable sensible omitida
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ====== MAILPIT (Mail Testing) ======
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025
MAILPIT_STORAGE=/data
MAILPIT_UI_COLOR=#ff6b35

# ====== MARIADB (Base de Datos) ======
# MYSQL_ROOT_PASSWORD= # Variable sensible omitida
MYSQL_DATABASE=inventario
MYSQL_USER=inventario_user
# MYSQL_PASSWORD= # Variable sensible omitida
MYSQL_HOST=mariadb
MYSQL_PORT=3306
MYSQL_PORT_PHPMYADMIN=8090

# ====== REDIS (Cache) ======
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PORT_PANEL=8080
# REDIS_PASSWORD= # Variable sensible omitida
REDIS_DB=0

# ====== RABBITMQ (Mensajería) ======
RABBITMQ_DEFAULT_USER=inventario_user
# RABBITMQ_DEFAULT_PASS= # Variable sensible omitida
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_UI_PORT=15672

# ====== REDES Y IPAM ======
EXTERNAL_SUBNET=192.168.55.0/24
INTERNAL_NETWORK=internal
EXTERNAL_NETWORK=external

# ====== health checks ======
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

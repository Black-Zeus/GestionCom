# ====== REDIS (Cache) ======
REDIS_HOST=${REDIS_HOST}                     # ✅ USADA - Requerida por config.py
REDIS_PORT=${REDIS_PORT}                     # ✅ USADA - Requerida por config.py
REDIS_PASSWORD=${REDIS_PASSWORD}             # ✅ USADA - Requerida por config.py
REDIS_DB=${REDIS_DB}                         # ✅ USADA - Requerida por config.py

# ====================================
# VARIABLES REQUERIDAS POR CONFIG.PY
# ====================================

# ====== JWT Configuration ======
JWT_SECRET_SYSTEM=${BACKEND_API_SECRET_KEY}      # ✅ REQUERIDA - Campo obligatorio
JWT_ALGORITHM=HS256                          # ✅ USADA - Con valor por defecto
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30           # ✅ USADA - Con valor por defecto
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30             # ✅ USADA - Con valor por defecto

# ====== Database Configuration ======
MYSQL_USER=${MYSQL_USER}
MYSQL_PASSWORD=${MYSQL_PASSWORD}
MYSQL_DATABASE=${MYSQL_DATABASE}  
MYSQL_HOST=${MYSQL_HOST}
MYSQL_PORT=${MYSQL_PORT} 

# ====== Redis Configuration (Adicionales) ======
REDIS_MAX_CONNECTIONS=20                     # ✅ USADA - Con valor por defecto
REDIS_CONNECTION_TIMEOUT=5                   # ✅ USADA - Con valor por defecto
REDIS_SOCKET_TIMEOUT=5                       # ✅ USADA - Con valor por defecto

# ====== Cache TTLs (seconds) ======
USER_SECRET_CACHE_TTL=3600                   # ✅ USADA - Cache TTL para secretos de usuario (1 hora)
TOKEN_BLACKLIST_TTL=1800                     # ✅ USADA - Cache TTL para tokens en blacklist (30 min)
RATE_LIMIT_WINDOW=60                         # ✅ USADA - Ventana de rate limiting (1 minuto)

# ====== Security Settings ======
RATE_LIMIT_REQUESTS_PER_MINUTE=60            # ✅ USADA - Límite de requests por minuto
RATE_LIMIT_LOGIN_ATTEMPTS_PER_HOUR=10        # ✅ USADA - Límite de intentos de login por hora
MAX_LOGIN_ATTEMPTS=5                         # ✅ USADA - Máximo intentos de login antes del bloqueo
LOCKOUT_DURATION_MINUTES=15                  # ✅ USADA - Duración del bloqueo en minutos

# ====== Database URL (Opcional) ======
# DATABASE_URL=                              # ⚪ OPCIONAL - Si no se define, se construye con DB_*

# ====== Application Settings ======
API_VERSION=v1                               # ✅ USADA - Versión de la API
DEBUG_MODE=true                              # ✅ USADA - Modo debug (true/false)
ENABLE_STACK_TRACE=true                      # ✅ USADA - Habilitar stack trace en errores
ENVIRONMENT=${ENV}                       # ✅ USADA - Entorno (development/production)

# ====== Logging Configuration ======
LOG_LEVEL=INFO                               # ✅ USADA - Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_FORMAT=json                              # ✅ USADA - Formato de logs (json | text)
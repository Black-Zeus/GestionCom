  "variants": {
    "solid": {
      "base": "btn-base btn-md bg-primary-600 text-white hover:bg-primary-700 active:bg-primary-800 shadow-button hover:shadow-button-hover",
      "disabled": "opacity-60 cursor-not-allowed",
      "loading": "opacity-80"

      "disabled": "opacity-60 cursor-not-allowed",
      "loading": "opacity-80"
    }
  },
  "pdf": {
    "defaultPageSize": "A4",
    "defaultOrientation": "portrait",
    "defaultMargins": [40, 60, 40, 60],
    "corporateMargins": [60, 100, 60, 80],
    "maxTableRows": 1000,
    "dateFormat": "DD/MM/YYYY",
    "locale": "es-ES"
  },
  "pdfBuilder": {
    "elements": {
      "cover": {
        "defaultAlignment": "center",
        "includeDateByDefault": true,
        "includePageBreakByDefault": true,
        "styles": {
          "title": {
            "fontSize": 24,
            "bold": true,
            "margin": [0, 60, 0, 20]
          },
          "subtitle": {
            "fontSize": 16,
            "margin": [0, 0, 0, 40]
          },
          "description": {
            "fontSize": 12,
            "margin": [0, 0, 0, 60]
          },
          "info": {
            "fontSize": 11,
            "color": "#6b7280",
            "margin": [0, 2, 0, 2]
          }
        }
      },
      "section": {
        "maxLevel": 6,
        "styles": {
          "level1": {
            "fontSize": 18,
            "bold": true,
            "margin": [0, 20, 0, 10]
          },
          "level2": {
            "fontSize": 16,
            "bold": true,
            "margin": [0, 15, 0, 8]
          },
          "level3": {
            "fontSize": 14,
            "bold": true,
            "margin": [0, 12, 0, 6]
          },
          "level4": {
            "fontSize": 12,
            "bold": true,
            "margin": [0, 10, 0, 5]
          },
          "level5": {
            "fontSize": 11,
            "bold": true,
            "margin": [0, 8, 0, 4]
          },
          "level6": {
            "fontSize": 10,
            "bold": true,
            "margin": [0, 6, 0, 3]
          }
        }
      },
      "paragraph": {
        "defaultStyle": "body",
        "styles": {
          "body": {
            "fontSize": 10,
            "lineHeight": 1.3,
            "margin": [0, 5, 0, 5]
          },
          "lead": {
            "fontSize": 12,
            "lineHeight": 1.4,
            "margin": [0, 8, 0, 8]
          },
          "small": {
            "fontSize": 9,
            "lineHeight": 1.2,
            "margin": [0, 3, 0, 3]
          }
        }
      },
      "table": {
        "defaultHeaderStyle": "tableHeader",
        "alternateRowColors": true,
        "styles": {
          "default": {
            "fontSize": 9,
            "margin": [0, 10, 0, 10]
          },
          "compact": {
            "fontSize": 8,
            "margin": [0, 5, 0, 5]
          },
          "spacious": {
            "fontSize": 10,
            "margin": [0, 15, 0, 15]
          }
        },
        "headerStyles": {
          "default": {
            "bold": true,
            "fillColor": "#f3f4f6",
            "color": "#374151"
          },
          "corporate": {
            "bold": true,
            "fillColor": "#2563eb",
            "color": "#ffffff"
          }
        }
      },
      "list": {
        "types": ["bullet", "numbered", "custom"],
        "defaultIndent": 20,
        "defaultSpacing": 5,
        "markers": {
          "bullet": "‚Ä¢",
          "dash": "-",
          "arrow": "‚Üí",
          "check": "‚úì"
        }
      },
      "image": {
        "defaultAlignment": "center",
        "captionStyle": "caption",
        "styles": {
          "caption": {
            "fontSize": 9,
            "italics": true,
            "color": "#6b7280",
            "margin": [0, 5, 0, 10]
          }
        }
      }
    },
    "validation": {
      "enabled": true,
      "strictMode": false,
      "maxElements": 1000,
      "maxTableRows": 10000,
      "maxImageSize": "10MB",
      "allowedImageTypes": ["jpg", "jpeg", "png", "gif", "webp"]
    },
    "performance": {
      "chunkSize": 100,
      "maxProcessingTime": 30000,
      "enableProgressTracking": true
    }
  },
  "builderStyles": {
    "base": {
      "normal": {
        "fontSize": 10,
        "lineHeight": 1.3
      },
      "header": {
        "fontSize": 18,
        "bold": true,
        "margin": [0, 20, 0, 10],
        "color": "#374151"
      },
      "subheader": {
        "fontSize": 14,
        "bold": true,
        "margin": [0, 15, 0, 8],
        "color": "#6b7280"
      },
      "body": {
        "fontSize": 10,
        "lineHeight": 1.3,
        "margin": [0, 5, 0, 5]
      },
      "caption": {
        "fontSize": 9,
        "italics": true,
        "color": "#9ca3af",
        "alignment": "center"
      },
      "footer": {
        "fontSize": 8,
        "color": "#9ca3af",
        "alignment": "center"
      }
    },
    "corporate": {
      "coverTitle": {
        "fontSize": 28,
        "bold": true,
        "color": "#1f2937",
        "alignment": "center",
        "margin": [0, 80, 0, 30]
      },
      "coverSubtitle": {
        "fontSize": 18,
        "color": "#6b7280",
        "alignment": "center",
        "margin": [0, 0, 0, 50]
      },
      "sectionTitle": {
        "fontSize": 20,
        "bold": true,
        "color": "#2563eb",
        "margin": [0, 25, 0, 15]
      },
      "corporateTableHeader": {
        "bold": true,
        "fontSize": 10,
        "fillColor": "#2563eb",
        "color": "#ffffff"
      }
    }
  },
  "templates": {
    "simple": {
      "name": "Documento Simple",
      "description": "Plantilla b√°sica para documentos PDF",
      "elements": ["cover", "section", "paragraph", "table"]
    },
    "report": {
      "name": "Reporte",
      "description": "Plantilla para reportes con portada y secciones",
      "elements": ["cover", "section", "paragraph", "table", "image", "list"]
    },
    "corporate": {
      "name": "Documento Corporativo",
      "description": "Plantilla con branding corporativo completo",
      "elements": ["cover", "section", "paragraph", "table", "image", "list"],
      "features": ["header", "footer", "watermark", "toc"]
    }
  },
  "limits": {
    "maxFileSize": "50MB",
    "maxPages": 1000,
    "maxElements": 10000,
    "timeout": 60000
  },
  "features": {
    "multiColumn": false,
    "tableOfContents": false,
    "footnotes": false,
    "watermarks": true,
    "customFonts": false,
    "advancedLayouts": false
  }
}
